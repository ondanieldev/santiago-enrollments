<style>
    body {
        display: flex;
        justify-content: center;
    }

    .message-content {
        font: Arial, Helvetica, sans-serif;
        max-width: 600px;
        font-size: 18px;
        line-height: 21px;
        text-align: justify;
    }

    .header {
        background-color: #e0e0e0;
        padding: 12px 24px;
        display: flex;
        align-items: center;
        display: flex;
        justify-content: center;
        border-radius: 8px 8px 0 0;
    }

    .header img {
        height: 80px;
    }

    .regards {
        padding: 24px 24px 12px 24px;
        text-align: center;
        background-color: #f5f5f5;
        color: #212529;
    }

    .message {
        padding: 24px;
        background-color: #f5f5f5;
        color: #212529;
    }

    .footer {
        padding: 24px;
        background-color: #013C64;
        display: flex;
        border-radius: 0 0 8px 8px;
        color: #fafafa;
    }

    .footer div {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        flex: 1;
    }

    .footer div + div {
        margin-left: 24px;
    }

    .footer img {
        height: 30px;
        margin-bottom: 12px;
    }
</style>

